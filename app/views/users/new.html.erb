<div class="col-md-6 col-md-offset-3 text-center">
  <h1>Create Account</h1>
  <%= form_for @user do |f| %>
    <div class="form-group text-left">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: "username", :class => "form-control" %>
    </div>

    <div class="form-group text-left">
      <%= f.label :phone_number %>
      <%= f.telephone_field :phone_number, placeholder: "10-digit mobile phone number", :class => "form-control" %>
    </div>

    <div class="form-group text-left">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "create password", :class => "form-control" %>
    </div>

    <div class="form-group text-left">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: "confirm password", :class => "form-control" %>
    </div>

    <div class=btn-group>
      <%= f.submit "Create New Account", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
