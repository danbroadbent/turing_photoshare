<div class="col-md-6 col-md-offset-3 text-center">
  <h1>Create Account</h1>
  <%= form_for @user do |f| %>

    <%= f.fields_for :user_profile do |user_profile_form| %>

      <div class="form-group text-left">
        <%= user_profile_form.label :username %>
        <%= user_profile_form.text_field :username, placeholder: "username", :class => "form-control" %>
      </div>

      <div class="form-group text-left">
        <%= user_profile_form.label :phone_number %>
        <%= user_profile_form.telephone_field :phone_number, placeholder: "10-digit mobile phone number", :class => "form-control" %>
      </div>
    <% end %>

    <div class="form-group text-left">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "create password", :class => "form-control" %>
    </div>

    <div class="form-group text-left">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: "confirm password", :class => "form-control" %>
    </div>

    <div class=btn-group>
      <%= f.submit "Create New Account", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
