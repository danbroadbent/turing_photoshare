<div class="container">
  <h3><%= @album.title %></h3>
  <p><%= @album.description %></p>
  <% @album.photos.each do |photo| %>
    <%= render 'shared/photo_tile', photo: photo %>
  <% end %>
  <div class="album-button-bar btn-group">
    <%= link_to "Add Photo", new_photo_path(album_id: @album.id), class: "btn btn-primary btn-sm" %>
    <%= render 'shared/album_delete' %>
  </div>
</div>


<h2>Album Comments</h2>
<% @album.comments.each do |comment| %>
  <p>
    <b>Author:</b>
    <%= User.find(comment.user_id).username %>
  </p>

  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
  <p>
    <b>Created At:</b>
    <%= comment.created_at %>
  </p>
<% end %>
<%= form_for ([@album, @album.comments.build]) do |f| %>
<%= f.label :body, 'Comment' %>
<%= f.text_field :body %>
<%= f.submit "Add Comment" %>
<% end %>
