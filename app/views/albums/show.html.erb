<p><%= @album.title %></p>
<p><%= @album.description %></p>
<%= link_to "Add Photo", new_photo_path(album_id: @album.id) %>
<% @album.photos.each do |photo| %>
  <div class="container col-md-3">
    <div class="photo_tile well">
      <p class="small"><%= photo.user.username %></p>
      <div class="thumbnail">
        <%= image_tag photo.image %>
      </div>
      <%= photo.caption %>
    </div>
  </div>
<% end %>
<h2>Album Comments</h2>
<% @album.comments.each do |comment| %>
  <p>
    <b>Author:</b>
    <%= User.find(comment.user_id).username %>
  </p>

  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
  <p>
    <b>Created At:</b>
    <%= comment.created_at %>
  </p>
<% end %>
<%= form_for ([@album, @album.comments.build]) do |f| %>
<%= f.label :body, 'Comment' %>
<%= f.text_field :body %>
<%= f.submit "Add Comment" %>
<% end %>
