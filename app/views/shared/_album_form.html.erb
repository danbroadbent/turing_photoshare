<div class="col-md-6 col-md-offset-3 text-center">
  <h3><%= header %> Album</h3>
  <%= form_for album do |f| %>
    <div class="form-group text-left">
      <%= f.label :title %>
      <%= f.text_field :title, value: album.title, class: "form-control" %>
    </div>

    <div class="form-group text-left">
      <%= f.label :description %>
      <%= f.text_area :description, value: album.description, class: "form-control" %>
    </div>

    <%= f.check_box :public, :data => { :size => 'large', 'on-text' => 'Public', 'off-text' => 'Private'} %>

    <div class=btn-group>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#album_public').bootstrapSwitch('state', <%= album.public %>)
  });
</script>
