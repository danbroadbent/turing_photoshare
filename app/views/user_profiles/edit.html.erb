<div class="container">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h3>Edit Profile</h3>

    <%= form_for @user_profile do |f| %>

    <div class="form-group text-left">
      <%= f.label :username %>
      <%= f.text_field :username, value: @user_profile.username, :class => "form-control" %>
    </div>

    <div class="form-group text-left">
      <%= f.label :email %>
      <%= f.text_field :email, value: @user_profile.email, :class => "form-control" %>
    </div>

    <div class="form-group text-left">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, value: @user_profile.phone_number, :class => "form-control" %>
    </div>

    <div class="form-group text-left">
      <%= f.label :bio %>
      <%= f.text_area :bio, value: @user_profile.bio, :class => "form-control" %>
    </div>

    <div class=btn-group>
      <%= f.submit "Update", :class => "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
